<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
  <EditTextPreference android:title="Host"
                      android:key="host"
                      android:summary="Host"></EditTextPreference>
  <EditTextPreference android:title="Port"
                      android:key="port"
                      android:summary="Port"></EditTextPreference>
  <CheckBoxPreference android:title="Use SSL"
                      android:defaultValue="false"
                      android:summary="Use HTTPS when checked, otherwise HTTP"
                      android:key="ssl" />
  <EditTextPreference android:title="Path"
                      android:key="path"
                      android:summary="Path"></EditTextPreference>
</PreferenceScreen>